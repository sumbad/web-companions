{
  "name": "@web-companions/gfc",
  "version": "1.1.0-develop.0",
  "description": "Generator Functional Components. A wrapper for creating Web components through JS Generator function",
  "main": "index.js",
  "scripts": {
    "test": "rimraf ./coverage && npm run dev:build && playwright test && nyc report --reporter=html --reporter=text",
    "test:ci": "CI=true npm run dev:build && playwright test && nyc report --reporter=lcov",
    "test:report": "open ./coverage/index.html",
    "test:debug": "PWDEBUG=1 npm run test",
    "start": "node ./app",
    "build": "npm run transpile && node ../../scripts/make-lib",
    "transpile": "rimraf ./lib && tsc",
    "dev": "npm run transpile && webpack-dev-server --config ./demo/webpack.config.js",
    "dev:build": "npm run transpile && webpack --config ./demo/webpack.config.js",
    "prepublishOnly": "node ../../scripts/prepublish.js && npm run build",
    "release": "RELEASE_MODE=true npm publish ./lib",
    "release:next": "RELEASE_MODE=true  npm publish ./lib --tag next"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sumbad/web-companions.git"
  },
  "keywords": [
    "Web Components",
    "Generator"
  ],
  "author": "sumbad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sumbad/web-companions/issues"
  },
  "homepage": "https://github.com/sumbad/web-companions#readme",
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.11",
    "@babel/runtime": "^7.16.7",
    "@playwright/test": "^1.18.0",
    "babel-loader": "^8.2.3",
    "babel-plugin-transform-jsx-to-tt": "^0.3.0",
    "concurrently": "^7.0.0",
    "copy-webpack-plugin": "^10.2.1",
    "core-js": "^3.20.3",
    "lit-html": "^2.1.1",
    "nyc": "^15.1.0",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "v8-to-istanbul": "^8.1.1",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  },
  "publishConfig": {
    "access": "public",
    "directory": "lib"
  }
}
