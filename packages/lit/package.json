{
  "name": "@web-companions/lit",
  "version": "0.0.0",
  "description": "Lit helpers",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js"
  },
  "typesVersions": {
    "*": {
      "/*": [
        "lib/index.d.ts"
      ]
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "tsc --build --clean && rimraf ./lib",
    "build": "npm run clean && tsc --build",
    "prepublishOnly": "node ../../scripts/prepublish.js && npm run build",
    "release": "RELEASE_MODE=true npm publish ./lib",
    "release:next": "npm publish ./lib --tag next"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sumbad/web-companions.git"
  },
  "keywords": [
    "Web Components"
  ],
  "author": "sumbad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sumbad/web-companions/issues"
  },
  "homepage": "https://github.com/sumbad/web-companions#readme",
  "dependencies": {
    "@web-companions/gfc": "*"
  },
  "peerDependencies": {
    "lit-html": "2.x"
  },
  "devDependencies": {
    "rimraf": "3.0.2",
    "typescript": "5.0.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
