{
  "name": "web-companions",
  "private": true,
  "type": "module",
  "scripts": {
    "prepublishOnly": "node scripts/prepublish.js",
    "release": "RELEASE_MODE=true node scripts/release.js",
    "dev": "npm run build && concurrently \"npm:watch\" \"npm run build:views -- --watch\" \"npm:www\"",
    "build": "npm run build --workspaces --if-present",
    "watch": "cd ./www && tsc --build --watch",
    "www": "webpack serve --progress --stats-children --stats-error-details --config ./www/webpack.config.cjs",
    "build:www": "NODE_ENV=production npm run build && NODE_ENV=production webpack --config ./www/webpack.config.cjs",
    "deploy:www": "npm run build:www && node ./scripts/.gh-pages.mjs"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.22.9",
    "@babel/preset-env": "7.22.9",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.72",
    "@tsconfig/recommended": "1.0.2",
    "babel-loader": "9.1.3",
    "babel-plugin-transform-jsx-to-tt": "0.4.0",
    "concurrently": "8.2.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.8.1",
    "fs-extra": "11.1.1",
    "gh-pages": "6.0.0",
    "glob": "10.2.7",
    "html-webpack-plugin": "5.5.3",
    "lerna": "7.0.2",
    "lit-html": "2.7.5",
    "postcss-loader": "7.3.3",
    "postcss-nesting": "12.0.1",
    "prettier": "3.0.2",
    "style-loader": "3.3.3",
    "stylelint-config-standard": "34.0.0",
    "swc-loader": "0.2.3",
    "terser": "5.18.0",
    "ts-loader": "9.4.4",
    "typescript": "5.1.6",
    "webpack": "5.88.2",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1"
  }
}
